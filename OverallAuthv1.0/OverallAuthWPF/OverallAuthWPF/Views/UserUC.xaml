<UserControl
    x:Class="OveralllAuth_V1.Views.UserUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:additionalProperties="clr-namespace:OverallAuthWPF.Additional_properties"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OveralllAuth_V1.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1000"
    d:DesignWidth="1600"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="DynamicPlaceholderStyle" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <!--  包含占位符TextBlock的视觉树  -->
                        <TextBox Foreground="Gray" Text="{Binding Path=(additionalProperties:TextBoxHelper.PlaceholderText), RelativeSource={RelativeSource TemplatedParent}}" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Border Background="Transparent" CornerRadius="0 10 10 0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--  搜索区域  -->
            <Border
                Height="80px"
                Margin="5,20,5,5"
                Background="Azure"
                CornerRadius="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Margin="60,20,20,20"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock>用户名：</TextBlock>
                        <TextBox
                            Width="280"
                            additionalProperties:TextBoxHelper.PlaceholderText="请输入需要搜索的用户"
                            Style="{StaticResource DynamicPlaceholderStyle}" />
                    </StackPanel>

                    <StackPanel
                        Grid.Column="1"
                        Margin="60,20,20,20"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock>角色：</TextBlock>
                        <TextBox
                            Width="280"
                            additionalProperties:TextBoxHelper.PlaceholderText="请输入需要搜索的角色"
                            Style="{StaticResource DynamicPlaceholderStyle}" />
                    </StackPanel>

                    <StackPanel
                        Grid.Column="2"
                        Margin="60,20,20,20"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">

                        <Border
                            Width="120"
                            Height="40"
                            Margin="0,0,20,0"
                            Background="Aqua"
                            CornerRadius="10">
                            <Button Background="Transparent" BorderThickness="0">
                                搜索
                            </Button>
                        </Border>

                        <Border
                            Width="120"
                            Height="40"
                            Background="BurlyWood"
                            CornerRadius="10">
                            <Button Background="Transparent" BorderThickness="0">
                                取消
                            </Button>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!--  内容区域  -->
            <Border
                Grid.Row="1"
                Margin="5,20,5,5"
                Background="Azure"
                CornerRadius="20">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="60" />
                    </Grid.RowDefinitions>

                    <!--  顶部操作按钮  -->
                    <StackPanel
                        Grid.Row="0"
                        Margin="40,30"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">

                        <Border
                            Width="120"
                            Height="40"
                            Margin="0,0,10,0"
                            Background="#409eff"
                            CornerRadius="10">
                            <Button
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding LoadDataCommand}"
                                Content="刷新"
                                FontSize="16"
                                Foreground="White" />
                        </Border>


                        <Border
                            Width="120"
                            Height="40"
                            Margin="0,0,10,0"
                            Background="#f56c6c"
                            CornerRadius="10">
                            <Button
                                Background="Transparent"
                                BorderThickness="0"
                                Content="删除"
                                FontSize="16"
                                Foreground="White" />
                        </Border>

                    </StackPanel>

                    <Border
                        Grid.Row="0"
                        Width="120"
                        Height="40"
                        Margin="0,0,50,0"
                        HorizontalAlignment="Right"
                        Background="#409eff"
                        CornerRadius="10">
                        <Button
                            Background="Transparent"
                            BorderThickness="0"
                            Content="+ 添加用户"
                            FontSize="16"
                            Foreground="White" />
                    </Border>

                    <!--  数据表  -->
                    <DataGrid
                        Grid.Row="1"
                        AlternatingRowBackground="#f0f0f0"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        ColumnHeaderHeight="40"
                        EnableRowVirtualization="True"
                        GridLinesVisibility="All"
                        HeadersVisibility="Column"
                        HorizontalGridLinesBrush="LightGray"
                        IsReadOnly="True"
                        ItemsSource="{Binding Users}"
                        SelectionMode="Single"
                        SelectionUnit="FullRow"
                        VerticalGridLinesBrush="LightGray">

                        <!--  列定义  -->
                        <DataGrid.Columns>
                            <!--  全选复选框列  -->
                            <DataGridCheckBoxColumn Width="Auto" Header="全选">
                                <DataGridCheckBoxColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <CheckBox
                                            HorizontalAlignment="Center"
                                            Content="全选"
                                            IsChecked="{Binding DataContext.IsAllSelected, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                                    </DataTemplate>
                                </DataGridCheckBoxColumn.HeaderTemplate>
                                <DataGridCheckBoxColumn.Binding>
                                    <Binding Mode="TwoWay" Path="IsSelected" />
                                </DataGridCheckBoxColumn.Binding>
                            </DataGridCheckBoxColumn>
                            <!--  序号列  -->
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Index}"
                                Header="序号"
                                IsReadOnly="True" />

                            <!--  操作列（放置按钮）  -->
                            <DataGridTemplateColumn Width="Auto" Header="操作">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Border
                                                Margin="5"
                                                Background="#409eff"
                                                CornerRadius="5">
                                                <Button
                                                    Margin="2"
                                                    Padding="5"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Command="{Binding EditCommand}"
                                                    Content="编辑" />
                                            </Border>
                                            <Border
                                                Margin="5"
                                                Background="#f56c6c"
                                                CornerRadius="5">
                                                <Button
                                                    Margin="2"
                                                    Padding="5"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Command="{Binding DeleteCommand}"
                                                    Content="删除" />
                                            </Border>

                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Name}"
                                Header="用户名" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding RoleName}"
                                Header="角色" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Description}"
                                Header="描述" />

                            <!--  是否启用（复选框）  -->
                            <DataGridCheckBoxColumn
                                Width="Auto"
                                Binding="{Binding IsEnabled}"
                                Header="是否启用" />

                            <!--  日期时间列，自定义显示格式  -->
                            <DataGridTextColumn Width="*" Header="创建时间">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="CreateTime" StringFormat="yyyy-MM-dd HH:mm:ss" />
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>

                            <DataGridTextColumn Width="*" Header="更新时间">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="UpdateTime" StringFormat="yyyy-MM-dd HH:mm:ss" />
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                        </DataGrid.Columns>

                        <!--  设置列标题样式  -->
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="Background" Value="#e0e0e0" />
                                <Setter Property="FontWeight" Value="Bold" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>

                </Grid>


            </Border>
        </Grid>
    </Border>
</UserControl>
